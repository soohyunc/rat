VERSION=`cat VERSION`

OSTYPE=`uname -s`
case $OSTYPE in
  SunOS                  ) OSTYPE=`uname -s`_`uname -r | awk -F. '{print $1}'`
                           ;;
  HP-UX                  ) OSTYPE=HPUX
                           ;;
  Linux | IRIX | FreeBSD ) 
                           ;;
  *                      ) echo "$OSTYPE"
                           echo "Not supported."
                           exit
                           ;;
esac

echo "Configuring RAT v$VERSION for $OSTYPE"

case $OSTYPE in
  SunOS_4 ) CC="gcc"
            WFLAGS="-W -Wall -Wbad-function-cast -Wmissing-prototypes -Werror"
	    INCLUDE="-I/cs/research/mice/starship/common/sun4/include -I/usr/ucl/X11/include -I/usr/demo/SOUND"
	    LDLIBS="/cs/research/mice/starship/common/sun4/lib/libtk80.a /cs/research/mice/starship/common/sun4/lib/libtcl80.a -L/usr/openwin/lib -lXext -lX11 -L/usr/demo/SOUND -laudio -lm"
	    AUDIO="auddev_sparc.o"
	    DEBUG="-g"
	    CHAR="-fsigned-char"
	    OPTIMIZE="-O4"
	    PROFILE="-pg"
            ;;
  SunOS_5 ) CC="gcc"
            WFLAGS="-W -Wall -Wbad-function-cast -Wmissing-prototypes -Werror"
	    INCLUDE="-I/cs/research/mice/starship/common/solaris/include -I/usr/demo/SOUND/include -I/usr/openwin/include"
	    LDLIBS="-L/cs/research/mice/starship/common/solaris/lib -ltk8.0 -ltcl8.0 -L/usr/openwin/lib -lXext -lX11 -L/usr/demo/SOUND/lib -laudio -lsocket -ldl -lnsl -lm -lcheck"
	    AUDIO="auddev_sparc.o"
	    DEBUG="-g -fbounds-checking"
	    CHAR="-fsigned-char"
	    OPTIMIZE="-O4"
	    PROFILE="-pg"
            ;;
  IRIX    ) CC="cc"
            WFLAGS="-fullwarn"
	    INCLUDE="-I/usr/ucl/X11/include -I/cs/research/mice/starship/common/irix/include"
	    LDLIBS="-L/cs/research/mice/starship/common/irix/lib -ltk8.0 -ltcl8.0 -L/usr/lib/X11 -lX11 -laudio -lm"
	    AUDIO="auddev_sgi.o"
	    DEBUG="-g"
	    CHAR="-signed"
	    OPTIMIZE="-O2"
	    PROFILE=""
            ;;
  Linux   ) CC="gcc"
            WFLAGS="-W -Wall -Wbad-function-cast -Wmissing-prototypes -Werror"
	    INCLUDE="-I/usr/X11R6/include -I/cs/research/mice/starship/common/linux/include"
	    LDLIBS="-L/cs/research/mice/starship/common/linux/lib -ltk8.0 -ltcl8.0 -L/usr/X11R6/lib -lX11 -lm -ldl"
	    AUDIO="auddev_oss.o"
	    DEBUG="-g -fbounds-checking"
	    CHAR="-fsigned-char"
	    OPTIMIZE="-O4"
	    PROFILE="-pg"
            ;;
  FreeBSD ) CC="gcc"
            WFLAGS="-W -Wall -Wbad-function-cast -Wmissing-prototypes -Werror"
	    INCLUDE="-I/usr/X11R6/include -I/cs/research/mice/starship/common/FreeBSD/include -I/usr/local/include"
	    LDLIBS="-L/cs/research/mice/starship/common/freebsd/lib -ltk80 -ltcl80 -L/usr/X11R6/lib -lXext -lX11 -lm"
	    AUDIO="auddev_luigi.o"
	    DEBUG="-g"
	    CHAR="-fsigned-char"
	    OPTIMIZE="-O4"
	    PROFILE="-pg"
            ;;
  HPUX    ) CC="gcc"
            WFLAGS="-W -Wall -Wbad-function-cast -Wmissing-prototypes -Werror"
	    INCLUDE="-I/usr/include/X11 -I/cs/research/mice/starship/common/hpux/include/"
	    LDLIBS="/cs/research/mice/starship/common/hpux/lib/libtk8.0.a /cs/research/mice/starship/common/hpux/lib/libtcl8.0.a -L/usr/lib/X11R5 -lXext -lX11 -lAlib -lm -ldld"
	    AUDIO="auddev_hpux_raw.o"
	    DEBUG="-g"
	    CHAR="-fsigned-char"
	    OPTIMIZE="-O4"
	    PROFILE="-pg"
            ;;
esac

# Process options to the configure script...
DEBUG2=""
OPTIMIZE2=""
PROFILE2=""
DEFS=""
while test $# -gt 0
do
	if [ $1 = "-debug" ]; then
		DEBUG2=$DEBUG
		DEFS="-DDEBUG"
		echo "Enabled debug option"
	elif [ $1 = "-optimize" ]; then
		OPTIMIZE2=$OPTIMIZE
		DEFS="-DNDEBUG"
		echo "Enabled optimize option"
	elif [ $1 = "-profile" ]; then
		PROFILE2=$PROFILE
		echo "Enabled profile option"
	else 
		DEFS="$DEFS $1"
		echo "Added $1 compile flag"
	fi
	shift
done

# Create Makefile
echo "Generating Makefile"
echo "# Generated automatically from Makefile.in" > Makefile
echo "# DO NOT EDIT THIS FILE" >> Makefile
cat Makefile.in \
| sed "s@__OSTYPE__@$OSTYPE@" \
| sed "s@__CC__@$CC@" \
| sed "s@__WFLAGS__@$WFLAGS@" \
| sed "s@__INCLUDE__@$INCLUDE@" \
| sed "s@__LDLIBS__@$LDLIBS@" \
| sed "s@__AUDIO__@$AUDIO@" \
| sed "s@__CHAR__@$CHAR@" \
| sed "s@__DEBUG__@$DEBUG2@" \
| sed "s@__OPTIMIZE__@$OPTIMIZE2@" \
| sed "s@__PROFILE__@$PROFILE2@" \
| sed "s@__DEFS__@$DEFS@" \
>> Makefile

# Create version.h
echo "Generating version.h"
echo \#define RAT_VERSION \"RAT v$VERSION\" > version.h

